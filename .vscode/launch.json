    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            // "python": "~/.conda/envs/ed_ip_simulation/bin/python3.11",
            "console": "integratedTerminal"
        },
        {
            "type": "R-Debugger",
            "request": "attach",
            "name": "R Debugger: Current File"
        },
        {
            "name": "validation-sim-args",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "--tune-job=ed-arr",
                "--test-sim-params"
            ],
            "console": "integratedTerminal"
        },
    ]
}